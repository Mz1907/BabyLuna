{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <!--==============page header============-->
    <div class="page-breadcrumb" data-stellar-background-ratio="0.5">
        <div class="container text-center">
            <h1>R&eacute;initialiser le mot de passe</h1>
        </div>
    </div>
    <!--==============end page header============-->
    <div class="overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="space-80"></div>
                    <div class="login-register-container">
                        <div class="login-register-inner">
                            <h3 class="margin-b-20 text-uppercase">R&eacute;initialiser le mot de passe</h3>
                        <form action="{{ path('fos_user_resetting_send_email') }}" novalidate="" method="POST" class="fos_user_resetting_request">
                            <p>Ne vous inqui&eacute;tez pas, nous vous enverrons un email pour r&eacute;cup&eacute;rer votre mot de passe.</p>

                            <div class="form-group xs-pt-20">
                                {% if invalid_username is defined %}
                                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                                {% endif %}
                                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                                <input type="text" id="username" class="form-control" name="username" required="required" placeholder="Email ou nom d'utilisateur" />
                            </div>



                            <p class="xs-pt-5 xs-pb-20">Vous avez oubli&eacute; votre email ? <a href="#">Contactez l'administrateur</a>.</p>
                            <div class="form-group xs-pt-5">
                                <button type="submit" class="btn btn-primary btn-xl">{{ 'resetting.request.submit'|trans }}</button>
                            </div>
                        </form>
                        </div>
                    </div>
                    <div class="space-80"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}